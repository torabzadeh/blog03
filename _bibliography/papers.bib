  author = {Li, Haoxiang and Zhang, Tiantian and Said, A. and Fu, Y. and Fabbris, G. and Mazzone, D. G. and Zhang, J. and Lapano, J. and Lee, H. N. and Lei, H. C. and Dean, M. P. M. and Murakami, S. and Miao, H.},
