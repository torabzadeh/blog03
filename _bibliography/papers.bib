@article{kim2022real,
author = {Min Gyu Kim  and Andi Barbour  and Wen Hu  and Stuart B. Wilkins  and Ian K. Robinson  and Mark P. M. Dean  and Junjie Yang  and Choongjae Won  and Sang-Wook Cheong  and Claudio Mazzoli  and Valery Kiryukhin },
title = {Real-space observation of fluctuating antiferromagnetic domains},
