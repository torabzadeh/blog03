  author = {Shen, Y. and Sears, J. and Fabbris, G. and Li, J. and Pelliciari, J. and Jarrige, I. and He, Xi and Bozovic, I. and Mitrano, M. and Zhang, Junjie and Mitchell, J. F. and Botana, A. S. and Bisogni, V. and Norman, M. R. and Johnston, S. and Dean, M. P. M.},
  journal = {Phys. Rev. X},
